{
  "name": "wavesurf-e2e",
  "private": true,
  "description": "Cypress browser tests for wavesurf",
  "scripts": {
    "generate-fixtures": "uv run python cypress/fixtures/generate_fixtures.py",
    "serve-fixtures": "npx http-server cypress/fixtures --port 8765 --silent",
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run",
    "test:e2e": "npm run generate-fixtures && npx start-server-and-test serve-fixtures http://localhost:8765 cypress:run"
  },
  "devDependencies": {
    "cypress": "^13.0.0",
    "@simonsmith/cypress-image-snapshot": "^9.0.0",
    "http-server": "^14.0.0",
    "start-server-and-test": "^2.0.0"
  }
}
